@model HastaneUygulamasi.Models.Odalar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Güncelle</h1>

<div class="row">
    <h6>Odalar</h6>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="OdaNumarası" class="control-label"></label>
                <input asp-for="OdaNumarası" class="form-control" />
                <span asp-validation-for="OdaNumarası" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye dön</a>
</div>
